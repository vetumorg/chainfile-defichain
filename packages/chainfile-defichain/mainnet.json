{
  "$schema": "https://chainfile.org/schema.json",
  "caip2": "bip122:279b1a87aedc7b9471d4ad4e5f12967a",
  "name": "DeFiChain Mainnet",
  "values": {
    "version": {
      "description": "The version of defid to run, refer to https://hub.docker.com/r/defi/defichain/tags for available versions/tag.",
      "default": "4.1.0"
    },
    "rpc_user": {
      "description": "Username for defid RPC using Basic HTTP authentication scheme defined in RFC 7617. You may set this value to a custom value or blank it empty to generate a random value.",
      "random": {
        "type": "bytes",
        "length": 16,
        "encoding": "hex"
      }
    },
    "rpc_password": {
      "description": "Password for defid RPC using Basic HTTP authentication scheme defined in RFC 7617. You may set this value to a custom value or leave it empty to generate a random value.",
      "random": {
        "type": "bytes",
        "length": 16,
        "encoding": "hex"
      }
    }
  },
  "containers": {
    "defid": {
      "image": "docker.io/defi/defichain",
      "tag": {
        "$value": "version"
      },
      "source": "https://github.com/DeFiCh/ain",
      "endpoints": {
        "p2p": {
          "port": 8555
        },
        "rpc": {
          "port": 8554,
          "protocol": "HTTP JSON-RPC 2.0",
          "authorization": {
            "type": "HttpBasic",
            "username": {
              "$value": "rpc_user"
            },
            "password": {
              "$value": "rpc_password"
            }
          },
          "probes": {
            "readiness": {
              "method": "getblockchaininfo",
              "params": [],
              "match": {
                "result": {
                  "type": "object",
                  "properties": {
                    "blocks": {
                      "type": "number"
                    }
                  },
                  "required": ["blocks"]
                }
              }
            }
          }
        }
      },
      "resources": {
        "cpu": 1,
        "memory": 4096
      },
      "command": [
        "sh",
        "-c",
        "defid -maxconnections=512 -printtoconsole -rpcallowip=0.0.0.0/0 -rpcbind=0.0.0.0 -rpcuser=${RPC_USER} -rpcpassword=${RPC_PASSWORD} -txindex=1 -acindex=1"
      ],
      "environment": {
        "RPC_USER": {
          "$value": "rpc_user"
        },
        "RPC_PASSWORD": {
          "$value": "rpc_password"
        }
      },
      "volumes": {
        "persistent": {
          "paths": ["/data"],
          "size": "100G"
        }
      }
    }
  }
}
